<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="#F5F5F5">

    <View
        android:id="@+id/shadow_bottom"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:background="@drawable/shadow_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/shadow_top"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:background="@drawable/shadow_inner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/shadow_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shadow_top" />

    <ImageView
        android:id="@+id/character_photo"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/character_image"
        android:elevation="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/shadow_bottom"
        app:layout_constraintDimensionRatio="h,4:3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shadow_top"
        tools:srcCompat="@tools:sample/avatars"
        tools:targetApi="lollipop" />

    <TextView
        android:id="@+id/charcater_origin_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/character_origin"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/character_birth_label"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/textView18"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <TextView
        android:id="@+id/character_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/charcater_origin_label"
        app:layout_constraintTop_toBottomOf="@+id/charcater_origin_label"
        tools:text="@sample/character.json/data/origin" />

    <TextView
        android:id="@+id/character_birth_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/character_birth"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/charcater_origin_label"
        app:layout_constraintEnd_toStartOf="@+id/character_gender_label"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/charcater_origin_label" />

    <TextView
        android:id="@+id/character_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/character_birth_label"
        app:layout_constraintTop_toBottomOf="@+id/character_birth_label"
        tools:text="@sample/character.json/data/birth" />

    <TextView
        android:id="@+id/character_gender_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/character_gender"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/character_birth_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/character_birth_label" />

    <TextView
        android:id="@+id/character_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/character_gender_label"
        app:layout_constraintTop_toBottomOf="@+id/character_gender_label"
        tools:text="@sample/character.json/data/gender" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/character_hero_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/character_photo"
        app:layout_constraintTop_toTopOf="@+id/character_photo"
        tools:text="@sample/character.json/data/hero_name" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@+id/character_photo"
        app:layout_constraintTop_toBottomOf="@+id/character_hero_name"
        tools:text="@sample/character.json/data/real_name" />

</androidx.constraintlayout.widget.ConstraintLayout>